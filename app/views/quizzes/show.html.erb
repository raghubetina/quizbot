<div>
  <div>
    <h1>
      Quiz #<%= @the_quiz.id %> details
    </h1>

    <div>
      <div>
        <a href="/quizzes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_quiz/<%= @the_quiz.id %>">
          Delete quiz
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_quiz.topic %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_quiz.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_quiz.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<dl>
  <% @the_quiz.messages.order(:created_at).each do |a_message| %>
    <dt><%= a_message.role %></dt>
    <dd><%= a_message.content %></dd>
  <% end %>
</dl>

<h2>
  Add a new message
</h2>

<form action="/insert_message" method="post">
  <div>
    <label for="content_box" class="form-label">
      Content
    </label>

    <textarea id="content_box" name="query_content" rows="3" class="form-control"></textarea>
  </div>

  <input type="hidden" id="quiz_id_box" name="query_quiz_id" value="<%= @the_quiz.id %>">

  <button class="btn btn-success mt-4">
    Create message
  </button>
</form>
