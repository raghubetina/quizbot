<div>
  <div>
    <h1>
      Quiz #<%= @the_quiz.id %> details
    </h1>

    <div>
      <div>
        <a href="/quizzes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_quiz/<%= @the_quiz.id %>">
          Delete quiz
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_quiz.topic %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_quiz.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_quiz.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<dl>
<% @the_quiz.messages.order(:created_at).each do |a_message| %>
  <dt><%= a_message.role %></dt>
  <dd><%= a_message.content %></dd>
<% end %>
</dl>


